{
  "compilerOptions": {
    /* Projects */
    "disableReferencedProjectLoad": true,    

    /* Language and Environment */
    "target": "ESNext",                            
    "experimentalDecorators": true,           

    /* Modules */
    "module": "ESNext",                            
    "rootDir": "src",                              
    "moduleResolution": "node",                    
    "baseUrl": ".",                                
    "types": ["node"],                             
    
    /* Emit */
    "declaration": true,                           
    "declarationMap": true,                        
    "outDir": "dist",                              
    "esModuleInterop": true,                       
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,                                
    "skipLibCheck": true,                          
  },
  "include": ["src", "test"],
  "exclude": ["dist"]
}
